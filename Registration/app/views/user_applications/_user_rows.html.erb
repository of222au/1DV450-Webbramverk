<div class="row">
  <div class="col-sm-12">

    <% if user_applications.any? %>

      <table class="table table-striped table-hover">

        <tr>
          <th>
            Titel
          </th>
          <th>
            API-nyckel
          </th>
          <th>
          </th>
        </tr>

        <% user_applications.each do |app| %>
          <tr>
            <td>
              <%= app.title %>
            </td>
            <td>
              <%= app.api_key %>
            </td>
            <td>
              <% unless current_user_is_admin %>
                <%= link_to edit_user_application_path(app), class: 'btn btn-sm btn-info' do %>
                  <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
              <% end %>
              <%= form_for app, html: { method: :delete, class: 'pull-right' } do |f| %>
                <%= f.submit 'Ta bort', class: 'btn btn-sm btn-danger' %>
              <% end %>
            </td>
          </tr>
        <% end %>

      </table>

    <% else %>

      <p class="small">Inga applikationer.</p>

    <% end %>

  </div>
</div>