<%= form_for @user_application, html: { class: 'form-horizontal' } do |f| %>

    <div class="form-group <%= f.object.errors[:title].any? ? 'has-error' : '' %>">
      <%= f.label :title, 'Titel', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <% if f.object.errors[:title] %>
          <div class="col-sm-offset-2 col-sm-10">
                <span class="help-block">
                  <%= f.object.errors[:title].join(', ') %>
                </span>
          </div>
      <% end %>
    </div>

    <div class="form-group <%= f.object.errors[:description].any? ? 'has-error' : '' %>">
      <%= f.label :description, 'Beskrivning', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: 'form-control' %>
      </div>

      <% if f.object.errors[:description] %>
          <div class="col-sm-offset-2 col-sm-10">
                <span class="help-block">
                  <%= f.object.errors[:description][0] %>
                </span>
          </div>
      <% end %>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit (edit ? 'Ã„ndra' : 'Skapa') + ' applikation', class: 'btn btn-success' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to 'Tillbaka', user_applications_path %>
      </div>
    </div>

<% end %>


<% if edit %>
  <%= form_for @user_application, method: :delete do |f| %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Ta bort applikation', class: 'btn btn-sm btn-danger' %>
        </div>
      </div>
  <% end %>
<% end %>
